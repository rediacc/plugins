*.ts text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf
*.ps1 text eol=lf
*.bat text eol=lf
*.cmd text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.env text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf
LICENSE text eol=lf
